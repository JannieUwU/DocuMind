{
  "compilerOptions": {
    // Enable type checking in JavaScript files
    "checkJs": true,

    // Strict type checking
    "strict": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    // Module resolution
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Target ES version
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    // Allow default imports from modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Path aliases (must match vite.config.js)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // JSX support for Vue
    "jsx": "preserve",

    // Skip type checking of declaration files
    "skipLibCheck": true,

    // Allow importing .vue files
    "allowJs": true,

    // Type roots
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "backend"
  ],

  "vueCompilerOptions": {
    "target": 3
  }
}
