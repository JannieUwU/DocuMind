# ========================================
# RAG Chat Application Configuration
# ========================================

# ========================================
# Database Configuration
# ========================================

# Database type: 'sqlite' (development) or 'postgresql' (production)
DATABASE_TYPE=sqlite

# SQLite Configuration (for development)
SQLITE_PATH=users.db

# PostgreSQL Configuration (for production)
# Uncomment and configure when migrating to PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# Example: DATABASE_URL=postgresql://ragchat_user:secure_password@localhost:5432/ragchat

# Connection Pool Settings (PostgreSQL only)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Enable SQL query logging (set to 'true' for debugging)
DB_ECHO=false

# ========================================
# Security Configuration
# ========================================

# JWT Secret Key (change this in production!)
SECRET_KEY=your-secret-key-change-this-in-production

# Master encryption key for API keys
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Keep this secret and don't commit to git!
MASTER_ENCRYPTION_KEY=

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================================
# API Configuration
# ========================================

# OpenAI API Configuration
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic API Configuration (optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Cohere API Configuration (optional)
COHERE_API_KEY=

# ========================================
# Server Configuration
# ========================================

# API Server
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Environment: 'development', 'staging', or 'production'
ENVIRONMENT=development

# ========================================
# Rate Limiting
# ========================================

# Rate limit per user (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Rate limit per IP (requests per minute)
RATE_LIMIT_PER_IP=100

# ========================================
# Cache Configuration
# ========================================

# Redis URL (optional, uses in-memory cache if not set)
# REDIS_URL=redis://localhost:6379/0

# Cache TTL (seconds)
CACHE_TTL=3600

# ========================================
# File Upload Configuration
# ========================================

# Maximum file size (in MB)
MAX_FILE_SIZE=50

# Allowed file types
ALLOWED_FILE_TYPES=pdf,txt,doc,docx

# Upload directory
UPLOAD_DIR=uploads

# ========================================
# Logging Configuration
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, uses stdout if not set)
# LOG_FILE=logs/app.log

# ========================================
# Email Configuration (optional)
# ========================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=RAG Chat

# ========================================
# Monitoring & Observability (optional)
# ========================================

# Sentry DSN for error tracking
# SENTRY_DSN=

# Enable performance monitoring
ENABLE_METRICS=true

# Metrics export interval (seconds)
METRICS_INTERVAL=60
